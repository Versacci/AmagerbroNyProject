@model IEnumerable<NyAmagerbroProj.Models.AmagerbroClothesStore>

@{
    ViewBag.Title = "Index";
}

<h2>Tøj butikker på amagerbro</h2>

<p>
    @Html.ActionLink("Opret ny butik", "Create")
</p>

@using (Html.BeginForm("Index", "AmagerbroClothes", FormMethod.Get))

{
    <div>
        @Html.TextBox("SearchString", null, new { @class = "col-xs-6 col-sm-4", placeholder = "Søg..." })

        <input type="submit" class="btn btn-warning btn-sm" value="Search" />
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Navn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Addresse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Åbningstider)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefon)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Navn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Addresse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Åbningstider)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefon)
        </td>
        <td>
            @Html.ActionLink("Rediger", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Slet", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
